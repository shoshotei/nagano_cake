<h2>商品一覧</h2>

<table  class="table table-sm">
 <thead>
    <tr>
     <th>商品ID</th>
     <th>商品名</th>
     <th>税抜価格</th>
     <th>ジャンル</th>
     <th colspan="3"></th>
     <th>ステータス</th>
    </tr>
 </thead>

 <tbody>
  <% @items.each do |item| %>
    <tr>
     <td><%= item.id %></td>
     <td><%= link_to item.name, admin_item_path(item.id) %></td>
     <td><%= item.price %></td>
     <td><%= genre.name %></td>
     <td></td>
     <td><%= item.is_active %></td>
    </tr>
  <% end %>
 </tbody>
</table>
