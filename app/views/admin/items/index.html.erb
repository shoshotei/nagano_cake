
<div class="container">
 <div class="row">
  <div class="col-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h3>商品一覧</h3>

   <%= link_to "商品新規登録", new_admin_item_path, class:"btn btn-secondary btn-sm" %>
   <table  class="table table-sm">
    <thead>
       <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th colspan="3"></th>
        <th>ステータス</th>
       </tr>
    </thead>

    <tbody>
     <% @items.each do |item| %>
       <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td colspan="3"></td>
        <td>
         <% if item.is_active == true %>販売中
          <% else %>販売中止
         <% end %>
        </td>
       </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>