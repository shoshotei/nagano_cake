<h3>商品詳細</h3>
<div class="container">
 <div class="row">
   <div class="col-4 px-5 px-sm-0 mx-auto">

</br>
<%= image_tag @item.get_image(200, 200) %>
</div>
<div class="col-8 px-5 px-sm-0 mx-auto">
<table class="table">

     <tr>
      <th>商品名</th>
      <td><%= @item.name %></td>
     </tr>

     <tr>
      <th>商品説明</th>
      <td><%= @item.introduction %></td>
     </tr>

     <tr>
      <th>ジャンル</th>
      <td><%= @item.genre.name %></td>
     </tr>

     <tr>
      <th>税込価格（税抜価）</th>
      <td><%= @item.price %></td>
     </tr>

      <tr>
      <th>販売ステータス</th>
      <td>
      <% if @item.is_active == true %>販売中
       <% else %>販売中止
      <% end %>
      </td>
    </tr>
</table>
</div>
</div>

 <%= link_to "編集する", edit_admin_item_path, class:"btn btn-success btn-sm" %>
</div>
