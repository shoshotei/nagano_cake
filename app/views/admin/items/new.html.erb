<h3>商品新規登録</h3>

<%= form_with model: @item, url: admin_items_path do |f| %>

<label for="image">商品画像</label>
<%= f.file_field :image, accept: "image/*" %></br>

<label for="name">商品名</label>
 <%= f.text_field :name, placeholder:"商品名"%></br>

<label for="introduction">商品説明</label>
 <%= f.text_area :introduction, placeholder:"ここに説明文を記述します" %></br>

 <label for="genre_id">ジャンル</label>
 <%= f.collection_select :genre_id, @genres, :id, :name %></br>

<label for="proce">税抜価格</label>
 <%= f.text_field :price, placeholder:"1000" %></br>

<label for="is_active">販売ステータス</label>
 <%= f.radio_button :is_active, "now_on_sale" %>
 <%= f.label :is_active, "販売中" %>

 <%= f.radio_button :is_active, "suspension_of_sale" %>
 <%= f.label :is_active, "販売中止" %></br>

 <p><%= f.submit '新規登録', class:"btn btn-success btn-sm" %></p>

<% end %>