<h2>商品新規登録</h2>

<%= form_with model: @item do |item| %>

<h3>商品画像</h3>
 <%= f.file_field :image, accept: "image/*" %>

<h3>商品名</h3>
 <%= f.text_field :name, placeholder:"商品名"%>

<h3>商品説明</h3>
 <%= f.text_area :introduction, placeholder:"ここに説明文を記述します" %>

 <h3>ジャンル</h3>
 <%= f.collection_select :genre_id, @genres, :id, :name %>

<h3>税抜価格</h3>
　<%= f.number_field :price, placeholder:"1000" %>

<h3>販売ステータス</h3>
 <%= f.radio_button :is_active, "now_on_sale" %>
 <%= f.label :is_active, "販売中" %>

 <%= f.radio_button :is_active, "suspension_of_sale" %>
 <%= f.label :is_active, "販売中止" %>

 <%= f.submit '新規登録', class:"btn btn-secondary btn-sm" %>

<% end %>