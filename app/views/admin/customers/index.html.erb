<h2>会員一覧</h2>

<table class="table table-sm">
 <thead>
   <tr>
     <th>会員ID</th>
     <th>氏名</th>
     <th>メールアドレス</th>
     <th>ステータス</th>
   </tr>
 </thead>

 <tbody>
  <%= @customers.each do |customer| %>
   <tr>
     <td><%= customer.id %></td>
     <td>
      <%= link_to admin_customer_path do %>
       <%= customer.name %>
      <% end %>
      </td>
     <td><%= customer.email %></td>
     <td>
      <% if customer.is_active == true %>有効
       <% else %>退会
      <% end %></td>
   </tr>
   <% end %>
   <%= paginate customers %>
 </tbody>
</table>