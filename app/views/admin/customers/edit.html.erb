<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>会員情報編集</h2>



 <%= form_with model: @customer, url: admin_customer_path do |f| %>

<p>
 <strong>会員ID</strong>
 <%= @customer.id %>
</p>

<p>
<div class="form-group">
   <label for="inputName">氏名</label></br>
   <%= f.text_field :last_name, autofocus: true, id:"inputName" %><%= f.text_field :first_name, autofocus: true, id:"inputName" %></br>
</div>
</p>

<p>
<div class="form-group">
   <label for="inputKanaName">フリガナ</label></br>
   <%= f.text_field :last_name_kana, autofocus: true, id:"inpuKanatName" %><%= f.text_field :first_name_kana, autofocus: true, id:"inputKanaName" %></br>
</div>
</p>

<p>
 <div class="form-group">
  <label for="inputPostalCode">郵便番号</label>
   <%= f.text_field :postal_code, autofocus: true, id:"inputPostalCode" %>
 </div>
</p>

<p>
  <div class="form-group">
    <label for="inputAddress">住所</label>
    <%= f.text_field :address, autofocus: true, id:"inputAddress" %>
  </div>

</p>

<p>
  <div class="form-group">
  <label for="inputTerephoneNumber">電話番号</label>
  <%= f.text_field :telephone_number, autofocus: true, id:"inputTelephoneNumber" %>
</p>

<p>
  <div class="form-group">
  <label for="inputEmail">メールアドレス</label>
  <%= f.email_field :email, autofocus: true, id:"inputEmail" %>
</p>

<p>
  <div class="form-group">
    <label for="inputIsDeleted">会員ステータス</label></br>
  <%= f.radio_button  :is_deleted, "有効" %>有効 <%= f.radio_button :is_deleted, "退会" %>退会
</p>

  <%= f.submit "変更を保存", class:"btn btn-secondary btn-sm" %>

 <% end %>
  </div>
 </div>
</div>