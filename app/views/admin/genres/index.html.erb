<h2>ジャンル一覧、追加</h2>


 <% form_with model: @genre, url: admin_genres_path do |f| %>
  <label for="genre_name">ジャンル名</label></br>
  <%= f.text_field :name %>
  <%= f.submit '新規投稿', class:"btn btn-success btn-sm" %>
 <% end %>

<table class="table table-sm">
  <thead>
   <tr>
    <th scope="col">ジャンル</th>
    <th colspan="3"></th>
   </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(@genre.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>