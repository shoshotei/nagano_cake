<h2>登録情報</h2>
<%= link_to "編集する" edit_customer_path, class:"btn btn-success btn-sm" %>

<table>
  <thead>
    <tr>
      <th>氏名</th>
      <th>カナ</th>
      <th>郵便番号</th>
      <th>住所</th>
      <th>電話番号</th>
      <th>メールアドレス</th>
    </tr>
  </thead>

  <tbody>

    <tr>
      <td><%= customers.last_name %> <%= customers.first_name %></td>
      <td><%= customers.last_name_kana %> <%= customers.first_name_ kana %></td>
      <td><%= customers.postal_code %></td>
      <td><%= customers.address %></td>
      <td><%= customers.telephone_number %></td>
      <td><%= customers.email %></td>
    </tr>
  </tbody>
</table>

