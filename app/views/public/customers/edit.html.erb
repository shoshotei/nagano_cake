<h2>会員情報編集</h2>

<%= form_with model: @customer do |f| %>


      <div class="form-group">
        <label for="inputName">氏名</label></br>
        <%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"姓" %><%= f.text_field :first_name, autofocus: true, id:"inputName", placeholder:"名" %></br>
      </div>

   　  <div class="form-group">
        <label for="inputName">フリガナ</label></br>
        <%= f.text_field :last_name_kana, autofocus: true, id:"inputName", placeholder:"セイ" %><%= f.text_field :first_name_kana, autofocus: true, id:"inputName", placeholder:"メイ" %></br>
      </div>

      <div class="form-group">
        <label for="inputPostal_code">郵便番号</label></br>
        <%= f.text_field :postal_code, autofocus: true, id:"inputPostal_code", placeholder:"0000000" %></br>
      </div>

      <div class="form-group">
        <label for="inputAddress">住所</label></br>
        <%= f.text_field :address, autofocus: true, id:"inpuAddress" %></br>
      </div>

      <div class="form-group">
        <label for="inputTelephone_number">電話番号</label></br>
        <%= f.text_field :telephone_number, autofocus: true, id:"inputTelephone_number" %></br>
      </div>


      <div class="form-group">
        <label for="inputEmail">メールアドレス</label></br>
        <%= f.email_field :email, autofocus: true, id:"inputEmail" %></br>
      </div>

      <%= f.submit "編集内容を保存", class:"btn btn-secondary btn-sm" %> <%= link_to "退会する",  customers_confirm_path, class:"btn btn-danger btn-sm" %>
<% end %>