 <div class="container">
   <div class="row">
     <h3>配送先編集</h3>

     <%= form_with model: @address do |f| %></br>

     <label for="postal_code">郵便番号（ハイフンなし）</label>
      <%= f.text_field :postal_code %></br>

      <label for="address">住所</label>
      <%= f.text_field :address %></br>

      <label for="name">宛名</label>
      <%= f.text_field :name %></br>

      <p><%= f.submit '変更内容を保存', class:"btn btn-success btn-sm" %></p>

      <% end %>
    </div>
 </div>