<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.name_field :last_name, autofocus: true, autocomplete: "last_name" %> <%= f.name_field :first_name, autofocus:true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :kana_name %><br />
    <%= f.kana_name_field :last_kana_name, autofocus: true, autocomplete: "last_kana_name" %> <%= f.kana_name_field :first_kana_name, autofocus:true, autocomplete: "first_kana_name" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postal_code %><br />
    <%= f.postal_code_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.address_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :terephone_number %><br />
    <%= f.terephone_number_field :terephone_number, autofocus: true, autocomplete: "terephone_number" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class:"btn btn-success btn-sm" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
