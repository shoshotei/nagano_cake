<h3>ショッピングカート</h3>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td></td>
      <td><%= cart_item.subtotal %></td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>

