<h3>注文情報確認</h3>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
   <% @total = 0  %>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td>
      <% @total += cart_item.subtotal.to_i %>
    </tr>
    <% end %>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>送料</th>
      <th>商品合計</th>
      <th>請求金額</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @order.shipping_cost %></td>
      <td><% @totel %></td>
      <td><%= @order.shipping_cost.to_i + @total.to_i %></td>
    </tr>
  </tbody>
</table>

<strong>支払方法</strong>
<%= @order.payment_method %></br>

<strong>お届け先</strong>
<%= "〒" %><%= @order.postal_code %>
<%= @order.address %></br>
<%= @order.last_name %><%= @order.first_name %></br>

