<h3>注文履歴詳細</h3>

<strong>注文情報</strong>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>支払方法</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
      <td><%= @order.address %></td>
      <td><%= @order.payment_method_i18n %></td>
      <td><%= @order.status_i18n %></td>
    </tr>
  </tbody>
</table>

<strong>注文内容</strong>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
   <% @total = 0  %>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td>
      <% @total += cart_item.subtotal.to_i %>
    </tr>
    <% end %>
  </tbody>
</table>

<strong>請求情報</strong>
<table>
  <thead>
    <tr>
      <th>商品合計</th>
    </tr>

    <tr>
      <th>配送料</th>
    </tr>

    <tr>
      <th>ご請求額</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @total.to_i %></td>
    </tr>

    <tr>
      <td><%= @order.shipping_cost %></td>
    </tr>

      <tr>
      <td><%= @order.shipping_cost.to_i + @total.to_i %></td>
    </tr>
  </tbody>
</table>