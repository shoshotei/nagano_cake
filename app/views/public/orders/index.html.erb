<h3>注文履歴一覧</h3>

<table>
  <thrad>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thrad>

  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td><%= order.address %></td>
      <td><%= order.item_id %></td>
      <td><%= @order.shipping_cost.to_i + @total.to_i %></td>
      <td><%= order.status_i18n %></td>
      <td><%= link_to "表示する", order_path(@arder.id), class:"btn btn-primary btn-sm" %></td>
    </tr>
    <% end %>
  </tbody>
</table>